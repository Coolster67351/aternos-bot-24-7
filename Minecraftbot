const mineflayer = require('mineflayer')

const bot = mineflayer.createBot({
  host: 'Coolsucht.aternos.me', // Ersetze dies mit der Adresse deines Aternos-Servers
  port: 13839,                            // Der Standard-Minecraft-Port
  username: 'Coolster67351bot'                     // Der Name des Bots
})

bot.on('chat', (username, message) => {
  if (username === bot.username) return
  bot.chat(`Hallo ${username}, du hast '${message}' gesagt!`)
})

bot.on('spawn', () => {
  bot.chat('Ich bin da!')
})
